<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_item_activity_list"
    android:layout_width="match_parent"
    android:layout_height="170dp"
    android:layout_margin="5dp">

    <com.example.mythreeview.CircleImageView
        android:id="@+id/civ_item_activity_shadow"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        app:rect_radius="10dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_item_activity_list"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:gravity="center_vertical"

            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_item_activity_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:lines="1"
                android:text="这是商家名称"
                android:textColor="@color/white"
                android:textSize="@dimen/title"
                />

            <TextView
                android:id="@+id/tv_item_activity_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:ellipsize="end"
                android:lines="1"
                android:text="这是描述"
                android:textColor="@color/white"/>
        </LinearLayout>
    </RelativeLayout>


</RelativeLayout>