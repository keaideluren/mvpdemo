<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginStart="10dp"
    android:padding="0dp"
    app:cardCornerRadius="5dp"
    app:cardUseCompatPadding="false"
    app:cardElevation="1dp">

    <com.zhy.android.percent.support.PercentLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.example.mythreeview.TopAngleImageView
            android:id="@+id/iv_cover"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_heightPercent="48%w"
            app:rect_radius="5dp"
            android:scaleType="centerCrop"/>

        <RelativeLayout
            android:id="@+id/rl_hostInfo"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/white"
            android:paddingBottom="5dp">

            <TextView
                android:id="@+id/tv_scenegroup_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="3dp"
                android:textColor="@color/colorTitleB"
                android:textSize="@dimen/body"
                android:textStyle="bold"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/tv_scenegroup_name"
                android:layout_marginBottom="3dp"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="3dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                >

                <ImageView
                    android:id="@+id/iv_location"
                    android:layout_width="17dp"
                    android:layout_height="17dp"
                    android:src="@drawable/icon_location_big"/>

                <TextView
                    android:id="@+id/tv_location_distance"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/colorTextG2"
                    android:textSize="@dimen/body"/>


                <ImageView
                    android:id="@+id/iv_praise"
                    android:layout_width="17dp"
                    android:layout_height="17dp"
                    android:src="@drawable/icon_praise"/>

                <TextView
                    android:id="@+id/tv_scenegroup_count"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginStart="5dp"
                    android:textColor="@color/colorTextG2"
                    android:textSize="@dimen/body"/>
            </LinearLayout>
        </RelativeLayout>
    </com.zhy.android.percent.support.PercentLinearLayout>

    <com.example.mythreeview.CircleImageView
        android:id="@+id/civ_logo"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="right"
        android:layout_marginRight="20dp"
        android:layout_marginTop="150dp"
        android:visibility="gone"
        app:border_color="@color/white"
        app:border_width="1dp"
        />

</android.support.v7.widget.CardView>